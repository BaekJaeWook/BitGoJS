{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es5",
    "lib": [
      "dom",
      "es2016"
    ],
    "sourceMap": true,
    "outDir": "./dist",
    "declaration": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "typeRoots": [
      "./node_modules/@types"
    ]
  },
  "exclude": [
    "node_modules",
    "build",
    "example",
    "browser",
    "dist"
  ]
}
